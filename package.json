{
  "name": "nice-ui",
  "version": "1.8.1",
  "description": "Nice UI React atoms, molecules, and organisms",
  "main": "lib/index.js",
  "files": [
    "lib/",
    "public/"
  ],
  "types": "lib/index.d.ts",
  "typings": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/streamich/nice-ui.git"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf lib modules && yarn storybook:clean",
    "lint": "yarn tslint",
    "precommit": "pretty-quick --staged && yarn lint",
    "prepush": "yarn prettier:diff && yarn test",
    "prettier:diff": "prettier --list-different 'src/**/*.{ts,tsx,js,jsx,json}'",
    "prettier": "prettier --ignore-path .gitignore --write 'src/**/*.{ts,tsx,js,jsx,json}'",
    "release": "semantic-release",
    "start": "yarn storybook",
    "storybook:build": "build-storybook",
    "storybook:clean": "rimraf storybook-static",
    "storybook": "start-storybook -p 6008",
    "test": "jest",
    "tslint": "tslint './src/**/*.{ts,tsx}' -t verbose",
    "watch": "yarn clean && tsc --watch"
  },
  "dependencies": {
    "emoji-js": "^3.4.1",
    "fast-af": "^0.3.0",
    "iconista": "^2.3.0",
    "libreact": "^2.12.2",
    "load-script": "^1.0.0",
    "md-mdast": "^3.1.1",
    "mdast-flat": "^1.4.0",
    "react-katex": "^2.0.2",
    "react-textarea-autosize": "^7.1.0",
    "react-universal-interface": "^0.6.0",
    "react-use": "^7.0.0",
    "throttle-debounce": "^2.1.0",
    "tiny-invariant": "^1.0.3",
    "tslib": "^1.9.3",
    "use-t": "^1.4.0"
  },
  "peerDependencies": {
    "p4-css": "*",
    "react": "*",
    "react-dom": "*"
  },
  "devDependencies": {
    "@babel/core": "7.5.5",
    "@emotion/core": "10.0.9",
    "@semantic-release/changelog": "3.0.4",
    "@semantic-release/git": "7.0.16",
    "@semantic-release/npm": "5.1.13",
    "@storybook/addon-actions": "5.0.11",
    "@storybook/addon-backgrounds": "5.0.11",
    "@storybook/addon-knobs": "5.0.11",
    "@storybook/addon-links": "5.0.11",
    "@storybook/addon-notes": "5.0.11",
    "@storybook/addon-options": "5.0.11",
    "@storybook/addon-viewport": "5.0.11",
    "@storybook/react": "5.0.11",
    "@types/jest": "24.0.16",
    "@types/node": "11.13.18",
    "@types/react": "16.8.24",
    "@types/react-dom": "16.8.5",
    "babel-loader": "8.0.6",
    "ci-scripts": "0.10.0",
    "concurrently": "4.1.1",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.14.0",
    "enzyme-to-json": "3.3.5",
    "fork-ts-checker-webpack-plugin": "0.5.2",
    "git-cz": "1.8.4",
    "gitbook-cli": "2.3.2",
    "glob": "7.1.4",
    "husky": "1.3.1",
    "jest": "24.8.0",
    "jest-environment-jsdom": "24.8.0",
    "jest-environment-jsdom-global": "1.2.0",
    "mkdirp": "0.5.1",
    "p4-css": "1.1.0",
    "prettier": "1.18.2",
    "pretty-quick": "1.11.1",
    "prop-types": "15.7.2",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-markdown": "4.1.0",
    "react-test-renderer": "16.8.6",
    "rimraf": "2.6.3",
    "semantic-release": "15.13.19",
    "storybook-readme": "4.0.5",
    "to-string-loader": "1.1.5",
    "ts-jest": "24.0.2",
    "ts-loader": "5.4.5",
    "ts-node": "8.3.0",
    "tslint": "5.18.0",
    "tslint-config-common": "1.6.0",
    "typescript": "3.5.3",
    "webpack": "4.39.0",
    "yalc": "1.0.0-pre.32"
  },
  "config": {
    "commitizen": {
      "path": "git-cz",
      "changelog": {
        "scopes": [
          "none",
          "atoms",
          "molecules",
          "organisms",
          "templates",
          "pages",
          "markdown",
          "styles",
          "util"
        ]
      }
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": [],
    "testRegex": ".*/__tests__/.*\\.(test|spec)\\.(jsx?|tsx?)$",
    "setupFiles": [
      "./src/__tests__/setup.js"
    ],
    "testEnvironment": "jest-environment-jsdom-global",
    "testURL": "http://localhost"
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  }
}
