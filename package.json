{
  "name": "nice-ui",
  "version": "1.5.0",
  "description": "Nice UI React atoms, molecules, and organisms",
  "main": "lib/index.js",
  "files": [
    "lib/",
    "public/"
  ],
  "types": "lib/index.d.ts",
  "typings": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/streamich/nice-ui.git"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf lib modules && yarn storybook:clean",
    "lint": "yarn tslint",
    "precommit": "pretty-quick --staged && yarn lint",
    "prepush": "yarn prettier:diff && yarn test",
    "prettier:diff": "prettier --list-different 'src/**/*.{ts,tsx,js,jsx,json}'",
    "prettier": "prettier --ignore-path .gitignore --write 'src/**/*.{ts,tsx,js,jsx,json}'",
    "release": "semantic-release",
    "start": "yarn storybook",
    "storybook:build": "build-storybook",
    "storybook:clean": "rimraf storybook-static",
    "storybook": "start-storybook -p 6008",
    "test": "jest",
    "tslint": "tslint './src/**/*.{ts,tsx}' -t verbose",
    "watch": "yarn clean && tsc --watch"
  },
  "dependencies": {
    "fast-af": "^0.3.0",
    "libreact": "^2.12.2",
    "load-script": "^1.0.0",
    "md-mdast": "^3.1.1",
    "mdast-flat": "^1.4.0",
    "p4-css": "^1.1.0",
    "react-katex": "^2.0.2",
    "react-textarea-autosize": "^7.1.0",
    "react-universal-interface": "^0.5.2",
    "react-use": "^5.5.0",
    "throttle-debounce": "^2.1.0",
    "tiny-invariant": "^1.0.3",
    "tslib": "^1.9.3",
    "use-t": "^1.4.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/npm": "^5.1.4",
    "@storybook/addon-actions": "^4.1.13",
    "@storybook/addon-backgrounds": "^4.1.13",
    "@storybook/addon-knobs": "^4.1.13",
    "@storybook/addon-links": "^4.0.2",
    "@storybook/addon-notes": "^4.1.13",
    "@storybook/addon-options": "^4.1.13",
    "@storybook/addon-viewport": "^4.1.13",
    "@storybook/react": "^4.1.13",
    "@types/jest": "^24.0.6",
    "@types/node": "^11.9.5",
    "@types/react": "^16.8.4",
    "@types/react-dom": "^16.8.2",
    "babel-loader": "^8.0.5",
    "ci-scripts": "^0.10.0",
    "concurrently": "^4.1.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "enzyme-to-json": "^3.3.5",
    "fork-ts-checker-webpack-plugin": "^0.5.2",
    "git-cz": "^1.8.0",
    "gitbook-cli": "^2.3.2",
    "glob": "^7.1.3",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "jest-environment-jsdom": "^24.0.0",
    "jest-environment-jsdom-global": "^1.1.1",
    "mkdirp": "^0.5.1",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-markdown": "^4.0.6",
    "react-test-renderer": "^16.8.3",
    "rimraf": "^2.6.3",
    "semantic-release": "^15.13.3",
    "storybook-readme": "^4.0.5",
    "to-string-loader": "^1.1.5",
    "ts-jest": "^24.0.0",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-common": "^1.6.0",
    "typescript": "^3.3.3333",
    "url-loader": "^1.1.2",
    "webpack": "^4.29.5",
    "yalc": "^1.0.0-pre.27"
  },
  "config": {
    "commitizen": {
      "path": "git-cz",
      "changelog": {
        "scopes": [
          "none",
          "atoms",
          "molecules",
          "organisms",
          "templates",
          "pages",
          "markdown",
          "styles",
          "util"
        ]
      }
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "transformIgnorePatterns": [],
    "testRegex": ".*/__tests__/.*\\.(test|spec)\\.(jsx?|tsx?)$",
    "setupFiles": [
      "./src/__tests__/setup.js"
    ],
    "testEnvironment": "jest-environment-jsdom-global",
    "testURL": "http://localhost"
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  }
}
